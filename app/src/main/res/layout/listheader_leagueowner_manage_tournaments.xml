<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TV_TournamentID"
        android:layout_width="95dp"
        android:layout_height="19dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="Tournament ID"
        app:layout_constraintEnd_toStartOf="@+id/TV_TournamentName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_TournamentName"
        android:layout_width="117dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="Tournament Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_TournamentDesc"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="Tournament Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_TournamentID" />

    <TextView
        android:id="@+id/TV_TournamentStyle"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="193dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="Tournament Style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_TournamentDesc" />

</android.support.constraint.ConstraintLayout>